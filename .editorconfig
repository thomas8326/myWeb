root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_style = space
indent_size = 2
quote_type = double

[*.css]
indent_style = space
indent_size = 2
quote_type = double

[*.scss]
indent_style = space
indent_size = 2
quote_type = single

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
quote_type = single
spaces_around_operators = true

[*.{json,yaml}]
indent_style = space
indent_size = 2
quote_type = double

[*.md]
indent_style = space
indent_size = 2
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false
